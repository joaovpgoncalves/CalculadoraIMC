<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ResultActivity">

        <TextView
        android:textColor="@color/black"
        android:text="Seu IMC é:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textColor="@color/purple_500"
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="16dp"
        android:textSize="38sp" />

        <TextView
        android:textColor="@color/black"
        android:id="@+id/textview_Classificacao"
        android:layout_margin="4dp"
        android:text="Classificação: Normal"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="CONFIRA OS VALORES DA TABELA IMC ABAIXO:"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textColor="@color/gray"
        android:text="MENOR QUE 18,5                                       MAGREZA"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textColor="@color/green"
        android:text="ENTRE 18,5 e 24,9                                        NORMAL"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textColor="@color/yellow"
        android:text="ENTRE 25,0 e 29,9                                  SOBREPESO"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textColor="@color/orange"
        android:text="ENTRE 30,0 e 34,9                     OBESIDADE GRAU I"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textColor="@color/red"
        android:text="ENTRE 35,0 e 39,9                    OBESIDADE GRAU II"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
        android:textColor="@color/black"
        android:text="MAIOR QUE 40,0                      OBESIDADE GRAU III"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        </LinearLayout>